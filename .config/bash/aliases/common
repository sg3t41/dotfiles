# 基本的なエイリアス
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# 安全性向上
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# ディレクトリ移動
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias c='clear'

# ripgrep エイリアス
alias rg='rg --smart-case --hidden'
alias rgi='rg --ignore-case'
alias rgf='rg --files'
alias rgtodo='rg "TODO|FIXME|XXX|HACK" --ignore-case'
alias rgjs='rg --type js'
alias rgts='rg --type ts'
alias rgpy='rg --type py'
alias rggo='rg --type go'
